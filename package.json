{
  "name": "doppler-webapp",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "eclint": "^2.8.1",
    "g": "^2.0.1",
    "prettier-check": "^2.0.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-scripts": "2.1.1",
    "react-translated": "^2.2.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "yarn prettier-check && react-scripts build && yarn eclint && yarn test",
    "test": "react-scripts test --watchAll=false",
    "eject": "react-scripts eject",
    "eclint": "eclint check  src/**/*.js",
    "prettier": "prettier --write src/**/*.js",
    "prettier-check": "prettier-check src/**/*.js"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "prettier": "1.15.3"
  }
}
