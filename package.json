{
  "name": "doppler-webapp",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.18.0",
    "eclint": "^2.8.1",
    "env-cmd": "^8.0.2",
    "g": "^2.0.1",
    "jest-dom": "^3.0.0",
    "jwt-decode": "^2.2.0",
    "prettier-check": "^2.0.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-intl": "^2.7.2",
    "react-scripts": "2.1.1",
    "react-testing-library": "^5.4.4"
  },
  "homepage": ".",
  "scripts": {
    "start": "react-scripts start",
    "build": "yarn prettier-check && react-scripts build && yarn eclint && yarn test",
    "verify": "yarn prettier-check && yarn eclint && yarn test", 
    "build:production": "env-cmd .env.production yarn build",
    "build:qa": "env-cmd .env.qa yarn build",
    "build:int": "env-cmd .env.int yarn build",
    "build:development": "env-cmd .env.development yarn build",
    "test": "react-scripts test --watchAll=false",
    "eject": "react-scripts eject",
    "eclint": "eclint check  src/**/*.js",
    "prettier": "prettier --write src/**/*.js",
    "prettier-check": "prettier-check src/**/*.js"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "prettier": "1.15.3"
  }
}
